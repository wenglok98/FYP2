<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NotesActivity">

    <include
        layout="@layout/app_title"
        android:id="@+id/apptitleoutlet"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
    <ImageView
        android:layout_below="@id/apptitleoutlet"
        android:layout_width="match_parent"
    android:layout_margin="@dimen/_20sdp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/klcc_night"
        android:layout_above="@id/detectbt"

        android:id="@+id/imview"/>

    <TextView
        android:layout_below="@id/imview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Default"
        android:visibility="gone"
        android:id="@+id/txview"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capture"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_alignParentBottom="true"
        android:id="@+id/cpbt"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:text="Detect text"
        android:textColor="@color/white"
android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:id="@+id/detectbt"

        />





</RelativeLayout>