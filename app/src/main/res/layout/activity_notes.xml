<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NotesActivity">

    <include
        android:id="@+id/apptitleoutlet"
        layout="@layout/app_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/imview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/detectbt"

        android:layout_below="@id/apptitleoutlet"
        android:layout_margin="@dimen/_20sdp"

        android:src="@drawable/klcc_night" />

    <TextView
        android:id="@+id/txview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imview"
        android:text="Default"
        android:visibility="gone" />

    <Button
        android:id="@+id/cpbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="Capture"
        android:visibility="gone" />

    <Button
        android:id="@+id/detectbt"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="Detect text"
        android:textColor="@color/white"

        />


</RelativeLayout>