<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/locsymbol"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="@dimen/_8sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"

        android:src="@drawable/reminder" />

    <TextView
        android:id="@+id/tv_subjectcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/locsymbol"
        android:paddingTop="15dp"
        android:text="ABCDEFG"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/tv_subjectname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_subjectcode"
        android:layout_toEndOf="@id/locsymbol"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="351,adsakfjasoijsafoijeofiasjfoasiejf"
        android:paddingBottom="15dp"/>

</RelativeLayout>