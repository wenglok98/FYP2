<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_15sdp"
    android:layout_marginBottom="@dimen/_15sdp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:id="@+id/forecast_subject_im"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_alignTop="@id/forecast_subject_im"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/forecast_subject_im"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_alignBottom="@id/forecast_subject_im">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:id="@+id/forecast_subject_code"
            android:text="UCCD 1234"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/forecast_subject_name"

            android:text="MULTIMEDIA"
            />




    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/forecast_subject_im"
        android:layout_alignBottom="@id/forecast_subject_im"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold"
        android:id="@+id/forecast_subject_result"
        android:text="A+"
        android:layout_alignParentRight="true"
android:layout_margin="@dimen/_5sdp"
        android:layout_centerVertical="true"/>

</RelativeLayout>